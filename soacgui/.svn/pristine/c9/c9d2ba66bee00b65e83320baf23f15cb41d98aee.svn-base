{% extends 'base.html' %}

{% block header %}
{% load staticfiles %}
<div class="head_d05 click">그룹</div>
{% endblock header %}

{% block left_menu %}
{% include "identity/left_menu.html" %}
{% endblock left_menu %}

{% block content %}
<div id="group" class="rs_d01">
    <div class="ind_d02">
        <div class="ind_d05">그룹</div>
        <div class="clear_float"></div>
    </div>
    <div class="clear_float"></div>
    <table class="common-tab-02 info" cellpadding="0" border="0" cellspacing="0">
        <tbody>
        <tr>
            <th class="name">그룹 이름</th>
            <td class="name">{{ group.name }}</td>
        </tr>
        <tr>
            <th class="name">그룹 ID</th>
            <td class="name">{{ group.id }}</td>
        </tr>
        <tr>
            <th class="enabled">활성화됨</th>
            <td class="enabled">{% if group.enabled %}예{% else %}아니오{% endif %}</td>
        </tr>
        <tr>
            <th class="description">설명</th>
            <td class="description">{{ group.description }}</td>
        </tr>
        </tbody>
    </table>
</div>
<script src='{% static "js/identity/groups/info.js" %}'></script>
{% endblock content %}